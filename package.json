{
  "name": "pravah-frontend",
  "version": "0.1.3",
  "private": true,
  "description": "Website for Pravah 2025 at SKIT College Jaipur",
  "author": "Prashant Singh <prashant.s2922@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Prashant-S29/pravah-frontend/issues"
  },
  "homepage": "https://github.com/Prashant-S29/pravah-frontend#readme",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "commit": "git-cz",
    "release": "standard-version",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.456.0",
    "next": "14.2.16",
    "next-themes": "^0.4.3",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commit-and-tag-version": "^12.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run pretty",
      "pre-push": "npm run build"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prashant-S29/pravah-frontend.git"
  }
}
